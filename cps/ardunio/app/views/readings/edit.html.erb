<h1>Editing reading</h1>

<% form_for(@reading) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :station_id %><br />
    <%= f.text_field :station_id %>
  </p>
  <p>
    <%= f.label :temperature %><br />
    <%= f.text_field :temperature %>
  </p>
  <p>
    <%= f.label :moisture %><br />
    <%= f.text_field :moisture %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @reading %> |
<%= link_to 'Back', readings_path %>