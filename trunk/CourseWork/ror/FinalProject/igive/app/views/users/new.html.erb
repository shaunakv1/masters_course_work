<div>
	<div id="stylized" class="myform">
<h1>Register with us</h1>
<p>Enter your Details</p>
	<table>
	<% form_for(@user) do |f| %>
	  <tr>
	  	<td colspan = "2"><%= f.error_messages %></td>
	  </tr>
	  
	    <tr>
	    	<td><%= f.label :name %></td>
	    	<td><%= f.text_field :name %></td>
		</tr>
	  
	  <tr>
	    <td><%= f.label :password %></td>
	    <td><%= f.text_field :password %></td>
	 </tr>
	 <tr>
	    <td><%= f.label :email %></td>
	    <td><%= f.text_field :email %></td>
	  </tr>  
	  <tr>
	  <td>&nbsp;</td>
	  <td><%= f.submit 'Create' %></td>
	  </tr>
	<% end %>
	</table>
<%= link_to 'Back', :controller => 'igive', :action => 'home' %>
	</div>
</div>