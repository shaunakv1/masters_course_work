<div id = "stylized" class = "searchresult">
	
<h1>Search Results</h1>
<p>Listing Posts that matched your search</p>

<table id="blue-table">
  <thead>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Posted By</th>
	<th>Request</th>
  </tr>
  </thead>
	<tbody>
<% @posts.each do |post| %>
  <tr>
    <td><%=h post.title %></td>
    <td><%=h post.description %></td>
    <td><%=h post.user.name %></td>
    <td><%= link_to 'Request', new_message_url ({:post_id => post.id})%></td>
  </tr>

<% end %>
</tbody>
</table>

<br />
</div>
