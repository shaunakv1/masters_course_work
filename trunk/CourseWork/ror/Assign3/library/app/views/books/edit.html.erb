<h1>Editing book</h1>

<% form_for(@book) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
   <p>
    <%= f.label :publisher_id %><br />
    <%= f.select :publisher_id, Publisher.all.map {|d| [d.name, d.id]} %>
  </p>
  
  <p>
    <%= f.label :author_id %><br />
    <%= f.collection_select(:author_ids, Author.all, :id, :first_name, {}, {:multiple => :multiple}) %>
  </p>   
  
  <p>
    <%= f.label :author_id %><br />
    <%= f.collection_select(:author_ids, Author.all, :id, :last_name, {}, {:multiple => :multiple}) %>
  </p>   
  
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', @book %> |
